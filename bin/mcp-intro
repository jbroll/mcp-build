#!/bin/bash
# Fetch MCP Build session key and print documentation URL for AI Actors

KEY=$(ssh john@symon.rkroll.com 'cat ~/.mcp-build-key' 2>/dev/null)

if [ -z "$KEY" ]; then
    echo "Error: Could not retrieve session key from server"
    exit 1
fi

echo "You have a build and test environment:"
echo " READ this document to understand how to connect use it: read https://symon.rkroll.com:3344/mcp-build.md?key=${KEY}"
